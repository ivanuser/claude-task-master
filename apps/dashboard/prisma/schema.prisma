// Two-Factor Authentication settings for users
model TwoFactorAuth {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // TOTP (Time-based One-Time Password) settings
  secret          String   // Encrypted TOTP secret
  enabled         Boolean  @default(false)
  verifiedAt      DateTime? // When 2FA was first verified
  
  // SMS fallback (optional)
  phoneNumber     String?  // Encrypted phone number
  smsEnabled      Boolean  @default(false)
  smsVerifiedAt   DateTime?
  
  // Authentication methods preferences
  preferredMethod TwoFactorMethod @default(TOTP)
  
  // Recovery settings
  recoveryEmail   String?  // Backup email for recovery
  
  // Security settings
  trustedDevices  Json     @default("[]") // Array of trusted device identifiers
  lastUsedAt      DateTime?
  
  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@map("two_factor_auth")
}

// Backup codes for 2FA recovery
model BackupCode {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  code      String   // Hashed backup code
  usedAt    DateTime? // When the code was used
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([code])
  @@map("backup_codes")
}

// Two-factor authentication recovery attempts
model TwoFactorRecovery {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  token           String   @unique // Recovery token
  method          RecoveryMethod // EMAIL or SMS
  destination     String   // Email or phone number (encrypted)
  
  attempts        Int      @default(0)
  maxAttempts     Int      @default(3)
  
  verifiedAt      DateTime?
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  
  @@index([userId])
  @@index([token])
  @@map("two_factor_recovery")
}

// Enum for two-factor authentication methods
enum TwoFactorMethod {
  TOTP      // Time-based One-Time Password (Google Authenticator, Authy, etc.)
  SMS       // SMS text message
  EMAIL     // Email OTP
  BACKUP    // Backup code
}

// Enum for recovery methods
enum RecoveryMethod {
  EMAIL
  SMS
  SUPPORT   // Manual recovery through support
}

// Theme Preferences model for storing user theme settings
model ThemePreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Theme settings
  mode            ThemeMode @default(SYSTEM)
  colorScheme     ColorScheme @default(BLUE)
  density         UIDensity @default(COMFORTABLE)
  fontSize        FontSize @default(MEDIUM)
  fontFamily      String?  @default("system")
  
  // Accessibility
  highContrast    Boolean  @default(false)
  reducedMotion   Boolean  @default(false)
  colorBlindMode  ColorBlindMode? // Optional color blind mode
  
  // Custom colors (stored as hex values)
  customPrimary   String?  // Primary brand color
  customSecondary String?  // Secondary brand color
  customAccent    String?  // Accent color
  customBackground String? // Background color override
  customText      String?  // Text color override
  
  // Advanced settings
  borderRadius    String?  @default("medium") // small, medium, large, xl
  shadowIntensity String?  @default("medium") // none, light, medium, heavy
  animations      Boolean  @default(true)
  
  // Theme presets (saved custom themes)
  savedThemes     Json     @default("[]") // Array of saved theme configurations
  
  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@map("theme_preferences")
}

// Enum for theme modes
enum ThemeMode {
  LIGHT
  DARK
  SYSTEM  // Follow system preference
  AUTO    // Auto-switch based on time of day
}

// Enum for color schemes
enum ColorScheme {
  BLUE
  PURPLE
  GREEN
  ORANGE
  RED
  TEAL
  PINK
  GRAY
  CUSTOM  // User-defined colors
}

// Enum for UI density
enum UIDensity {
  COMPACT
  COMFORTABLE
  SPACIOUS
}

// Enum for font sizes
enum FontSize {
  SMALL
  MEDIUM
  LARGE
  EXTRA_LARGE
}

// Enum for color blind modes
enum ColorBlindMode {
  PROTANOPIA    // Red-blind
  DEUTERANOPIA  // Green-blind
  TRITANOPIA    // Blue-blind
  ACHROMATOPSIA // Total color blindness
}

// Web Push Subscription for push notifications
model WebPushSubscription {
  id String @id @default(cuid())
  
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  endpoint String @unique
  keys Json // { p256dh, auth }
  expirationTime DateTime?
  
  userAgent String?
  deviceName String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Notification Types
enum NotificationType {
  TASK_ASSIGNED
  TASK_STATUS_CHANGED
  TASK_COMMENTED
  TASK_MENTIONED
  TASK_DEADLINE_APPROACHING
  TASK_OVERDUE
  PROJECT_INVITED
  PROJECT_ROLE_CHANGED
  SYNC_COMPLETED
  SYNC_FAILED
  SYSTEM_ANNOUNCEMENT
  SECURITY_ALERT
}

// Notification Priority
enum NotificationPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

// Notification Delivery Channel
enum NotificationChannel {
  IN_APP
  EMAIL
  PUSH
  SMS
}

// Notification Model
model Notification {
  id String @id @default(cuid())
  
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type NotificationType
  priority NotificationPriority @default(MEDIUM)
  
  title String
  message String
  data Json? // Additional context data
  
  // Related entities
  projectId String?
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  taskId String?
  // task Task? @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  // Tracking
  isRead Boolean @default(false)
  readAt DateTime?
  
  // Delivery channels used
  channels NotificationChannel[]
  
  // Batching support
  batchId String?
  
  // Action buttons
  actions Json? // [{ label: string, action: string, url?: string }]
  
  // Expiration
  expiresAt DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@index([projectId])
  @@index([batchId])
}

// User Notification Preferences
model NotificationPreference {
  id String @id @default(cuid())
  
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Global settings
  enabled Boolean @default(true)
  
  // Channel preferences
  emailEnabled Boolean @default(true)
  pushEnabled Boolean @default(true)
  inAppEnabled Boolean @default(true)
  smsEnabled Boolean @default(false)
  
  // Type-specific preferences
  taskAssigned Boolean @default(true)
  taskStatusChanged Boolean @default(true)
  taskCommented Boolean @default(true)
  taskMentioned Boolean @default(true)
  taskDeadlines Boolean @default(true)
  projectUpdates Boolean @default(true)
  syncNotifications Boolean @default(true)
  systemAnnouncements Boolean @default(true)
  securityAlerts Boolean @default(true)
  
  // Quiet hours
  quietHoursEnabled Boolean @default(false)
  quietHoursStart String? // "22:00"
  quietHoursEnd String? // "08:00"
  quietHoursTimezone String @default("UTC")
  quietHoursDays Json @default("[]") // ["monday", "tuesday", ...]
  
  // Notification batching
  batchingEnabled Boolean @default(false)
  batchingInterval Int @default(300) // seconds (5 minutes)
  
  // Sound settings
  soundEnabled Boolean @default(true)
  soundVolume Int @default(50) // 0-100
  customSound String?
  
  // Visual settings
  desktopBadge Boolean @default(true)
  vibrationEnabled Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Notification Queue for scheduled notifications
model NotificationQueue {
  id String @id @default(cuid())
  
  userId String
  scheduledFor DateTime
  
  type NotificationType
  priority NotificationPriority
  
  title String
  message String
  data Json?
  
  projectId String?
  taskId String?
  
  channels NotificationChannel[]
  
  processed Boolean @default(false)
  processedAt DateTime?
  
  attempts Int @default(0)
  lastError String?
  
  createdAt DateTime @default(now())
  
  @@index([scheduledFor, processed])
  @@index([userId])
}

// Notification Templates
model NotificationTemplate {
  id String @id @default(cuid())
  
  type NotificationType
  channel NotificationChannel
  
  name String
  subject String? // For email
  titleTemplate String
  messageTemplate String
  
  variables Json // Expected variables for template
  
  isActive Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([type, channel])
}

// Sync State tracking model
model SyncState {
  id          String   @id @default(cuid())
  
  // Project and User relations
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Status fields
  status      SyncStatusEnum @default(IDLE)
  lastSyncAt  DateTime?
  errorMessage String?
  
  // Sync metadata
  syncData    Json?    // Additional sync information
  progress    Int      @default(0) // Progress percentage
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([projectId, userId])
  @@index([status])
  @@index([lastSyncAt])
  @@map("sync_states")
}

// User Session tracking for real-time connections
model UserSession {
  id           String   @id @default(cuid())
  
  // User relation
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Connection information
  connectionId String   @unique
  isActive     Boolean  @default(true)
  connectedAt  DateTime @default(now())
  lastHeartbeat DateTime @default(now())
  
  // Session metadata
  ipAddress    String?
  userAgent    String?
  
  // Timestamps
  disconnectedAt DateTime?
  
  @@index([userId, isActive])
  @@index([lastHeartbeat])
  @@map("user_sessions")
}

// Event Log for tracking all sync-related events
model EventLog {
  id          String   @id @default(cuid())
  
  // Relations
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Event information
  eventType   String
  eventData   Json     // Flexible JSON data for event details
  timestamp   DateTime @default(now())
  processed   Boolean  @default(false)
  
  // Event metadata
  severity    EventSeverity @default(INFO)
  source      String?       // Source system/component
  
  @@index([projectId, timestamp])
  @@index([userId, timestamp])
  @@index([eventType, processed])
  @@index([timestamp])
  @@map("event_logs")
}

// Enum for Sync Status
enum SyncStatusEnum {
  IDLE
  SYNCING
  SYNCED
  ERROR
  PENDING
  
  @@map("sync_status_enum")
}

// Enum for Event Severity
enum EventSeverity {
  DEBUG
  INFO
  WARNING
  ERROR
  CRITICAL
  
  @@map("event_severity")
}
